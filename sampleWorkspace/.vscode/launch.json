	"version": "0.2.0",
	"configurations": [

		{
			"type": "mock",
			"request": "launch",
			"name": "Launch file",
			"program": "${file}",
			"stopOnEntry": false
		},
		{
			"type": "mock",
			"request": "launch",
			"name": "Ask for file name",
			"program": "${workspaceFolder}/${command:AskForProgramName}",
			"stopOnEntry": true
		},
		{
			"type": "mock",
			"request": "launch",
			"name": "Debug readme.md",
			"program": "${workspaceFolder}/readme.md",
			"stopOnEntry": true,
		},
		{
			"type": "mock",
			"request": "attach",
			"name": "Attach readme.md",
			"program": "${workspaceFolder}/readme.md",
			"stopOnEntry": true,
			"trace": false
		}
	]
}
